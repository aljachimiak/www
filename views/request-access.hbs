{{> head}}
	<article class="request-access">
	{{> site_header}}
	<section class="constrained contact-form">
		<header>
			<div class="hero__logo">
				<img class="hero__logo-img" src="/assets/svg/odd-networks-paul.svg" alt="Odd Networks">
			</div>
			<h2 class="hero__headline">
			Request Early Access
			</h2>
			<p class="hero__subhead">
				<span class="highlight">You'll have our email address. Ask us anything.</span>
			</p>
		</header>
		<form class="form contact-form__form" accept-charset="UTF-8" autocomplete="off" method="POST">
			{{#if formError}}
			<p class="form__field">
				<strong>There was an error submitting your form:</strong><br>
				<span class="error">{{formError}}</span>
			</p>
			{{/if}}

			<!-- Email -->
			<div class="form__field">
				<label class="form__label" for="email">Email <span class="form__req">*</span></label>
				<input class="form__text-input"
					id="email" name="email" type="email"
					spellcheck="false" size="28" maxlength="255"
					value="{{form.email}}"></input>
			</div>

			<!-- Comments -->
			<div class="form__field">
				<label class="form__label" for="inquiry">
					Tell us why you need early access.
					There's no shame in bragging a little.
				</label>
				<textarea
					id="inquiry" name="inquiry"
					spellcheck="true" rows="3" cols="50">{{form.inquiry}}</textarea>
			</div>

			<!-- Name: First, Last -->
			<div class="form__field">
				<label class="form__label" for="first_name">Name</label>
				<div class="form__subfield form__subfield--first">
					<input class="form__text-input"
						id="first_name" name="first_name"
						size="28" maxlength="255"
						value="{{form.firstName}}"></input>
					<label class="form__label" for="first_name">First <span class="form__req">*</span></label>
				</div>
				<div class="form__subfield">
					<input class="form__text-input"
						id="last_name" name="last_name"
						size="28" maxlength="255"
						value="{{form.lastName}}"></input>
					<label class="form__label" for="last_name">Last</label>
				</div>
			</div>

			<!-- Buttons -->
			<p class="form__buttons cta-button">
				<input id="save_contact_form" name="save_contact_form" class="cta-button__link" type="submit" value="Submit">
			</p>
		</form>
	</section>
	{{> site_footer}}
	</article>
{{> footer}}
