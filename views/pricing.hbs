{{> head}}
	{{> header}}
	<div class="page-content">
		<section class="pricing-components pricing-hero">
			<div class="row">
				<div class="cute-4-tablet">
					<h2>PROVIDERS IMAGE</h2>
				</div>
				<div class="cute-1-tablet">
					<h1 class="pricing__arrow">➡</h1>
				</div>
				<div class="cute-3-tablet">
					<img style="max-width:100%;" src="/assets/svg/paul.svg" alt="Paul - Odd Mascot">
				</div>
				<div class="cute-1-tablet">
					<h1 class="pricing__arrow">➡</h1>
				</div>
				<div class="cute-4-tablet">
					<h2>APPS IMAGE</h2>
				</div>
			</div>
		</section>

		<section class="pricing-config">
			<div class="row">
				<!-- Configurator -->
				<div class="cute-8-tablet">

					<!-- Tab buttons -->
					<div class="row">
						<div class="cute-3-phone">
							<a data-tab="true" href="#configure-providers">Providers</a>
						</div>
						<div class="cute-3-phone">
							<a data-tab="true" href="#configure-odd">Odd Networks</a>
						</div>
						<div class="cute-3-phone">
							<a data-tab="true" href="#configure-apps">App Choices</a>
						</div>
						<div class="cute-3-phone">
							<a data-tab="true" href="#configure-integrations">Integrations</a>
						</div>
					</div>

					<!-- Selection Area -->
					<div class="row">
						<div class="cute-12-phone">
							<div id="configure-providers">
								<h3>Where is your video hosting?</h3>
								<fieldset>
									<label><input type="radio" name="provider" value="vimeo" />Vimeo</label><br/>
									<label><input type="radio" name="provider" value="ooyala" />Ooyala</label><br/>
									<label><input type="radio" name="provider" value="brightcove" />Brightcove</label><br/>
									<label><input type="radio" name="provider" value="not listed" />Not listed?</label><br/>
									<input type="input" placeholder="Name of your video hosting provider.">
									<br/>

									<input name="livestream" id="livestream" type="checkbox">									
									<label for="livestream"> We have a livestream feed.</label></br>
								</fieldset>
							</div>
							<div id="configure-odd">
								<h3>Approximately, how many videos views in a month?</h3>
								<select name="odd-views-select" id="odd-views-select">
									<option value="10k">0 - 10,000 per month</option>
									<option value="100k"> 10k - 100k per month</option>
									<option value="250k">100k - 250k per month</option>
									<option value="enterprise">over 250k/month</option>
								</select>
							</div>
							<div id="configure-apps">
								<h3>Which apps do you need to show your content?</h3>

								<input name="roku" id="roku" type="checkbox" checked="checked" disabled>
								<label for="roku">Roku (included - free!)</label></br>

								<input name="apple-ios" id="apple-ios" type="checkbox">
								<label for="apple-ios">Apple iOS</label></br>

								<input name="apple-tv" id="apple-tv" type="checkbox">
								<label for="apple-tv">Apple TV</label></br>

								<input name="android" id="android" type="checkbox">
								<label for="android">Android</label></br>

								<input name="android-tv" id="android-tv" type="checkbox">
								<label for="android-tv">Apple TV</label></br>
							</div>

							<div id="configure-integrations">
								<h3>Do you need to manage subscriptions, entitlements, and per asset permissions?</h3>

								<input name="adobepass" id="adobepass" type="checkbox">
								<label for="adobepass">Adobe Pass</label></br>

								<input name="cleeng" id="cleeng" type="checkbox">
								<label for="cleeng">Cleeng</label></br>

								<input name="piano" id="piano" type="checkbox">
								<label for="piano">Piano</label></br>

								<input name="tinypass" id="tinypass" type="checkbox">
								<label for="tinypass">Tiny Pass</label></br>

								<input name="android-tv" id="android-tv" type="checkbox">
								<label for="android-tv">Apple TV</label></br>
							</div>
						</div>
					</div>
				</div>

				<!-- Selected List --> 
				<div class="cute-4-tablet">
					<h2>Your Odd Configuration</h2>

					<table>
						<thead>
							<td></td>
							<td></td>
						</thead>
						<tbody>
							<tr><td colspan="2">&nbsp;</td></tr>
							<tr class="config-table-label">
								<td colspan="2">Provider</td>
							</tr>
							<tr id="provider-after"></tr>
							<tr id="provider-none">
								<td colspan="2"><em>please choose a provider</em></td>
							</tr>

							<tr><td colspan="2">&nbsp;</td></tr>
							<tr class="config-table-label">
								<td colspan="2">Odd Networks</td>
							</tr>
							<tr id="odd-after"></tr>

							<tr><td colspan="2">&nbsp;</td></tr>
							<tr class="config-table-label">
								<td colspan="2">Apps</td>
							</tr>
							<tr>
								<td>Roku - free!</td>
								<td>$0</td>
							</tr>
							<tr id="apps-after"></tr>

							<tr><td colspan="2">&nbsp;</td></tr>
							<tr><td colspan="2">&nbsp;</td></tr>
							<tr class="config-table-label">
								<td colspan="2">Total</td>
							</tr>
							<tr>
								<td>Oddworks Monthy Cost</td>
								<td id="odd-cost">----</td>
							</tr>
							<tr>
								<td>Providers Apps and Integrations</td>
								<td>$ 0</td>
							</tr>
						</tbody>
					</table>

					<button type="button">Next</button>
				</div>
			</div>
		</section>


		<section class="pricing-hero">
			<div class="pricing-hero__container">
				<h2 class="pricing-hero__header">
					Pay as you grow
				</h2>
				<p class="pricing-hero__subheader">
					Your service will be able to scale up or down at any time.
				</p>
			</div>
		</section>
		<section class="pricing-content">
			<div class="pricing-content__container">
				<h2 class="pricing-content__header">
					Available soon.
				</h2>
				<p class="pricing-content__content">
					Our goal is to make the Odd Networks platform as <strong>accessible as possible</strong>
					and we're busy creating a pricing model that will make it a reality for you.
				</p>
				<p class="pricing-content__cta">
					<a class="pricing-content__cta-button button" href="/request-access">
						Request Early Access
					</a>
				</p>
				<p class="pricing-content__paul">
					<img src="/assets/svg/paul.svg" alt="paul">
				</p>
			</div>
		</section>
	</div>
	{{> footer}}
{{> foot}}
