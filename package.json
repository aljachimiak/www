{
  "name": "odd-networks-www",
  "private": true,
  "version": "1.0.0",
  "description": "Odd Networks World Wide Web",
  "scripts": {
    "postinstall": "npm run css",
    "start": "./bin/server",
    "lint": "xo",
    "test": "xo",
    "devserver": "nodemon ./bin/devserver | bunyan",
    "css": "treadmill build.js css",
    "watch-css": "treadmill build.js watch-css",
    "launch-instances": "source .launch-ec2-instances-vars.sh && bin/launch-ec2-instances",
    "deploy": "source .deploy-vars.sh && bin/deploy.sh"
  },
  "dependencies": {
    "bluebird": "~3.3.0",
    "body-parser": "~1.15.0",
    "boom": "~3.2.0",
    "brixx": "~1.6.0",
    "bunyan": "~1.8.0",
    "debug": "~2.2.0",
    "dotenv": "~2.0.0",
    "express": "~4.13.0",
    "filepath": "~1.1.0",
    "gray-matter": "~2.0.0",
    "hbs": "~4.0.0",
    "js-yaml": "~3.6.0",
    "lodash": "~4.11.0",
    "marked": "~0.3.0",
    "moment": "~2.13.0",
    "node-sass": "~3.7.0",
    "opbeat": "~3.6.0",
    "request": "~2.72.0",
    "treadmill": "~2.0.0"
  },
  "devDependencies": {
    "aws-sdk": "~2.4.0",
    "chokidar": "~1.6.0",
    "nodemon": "~1.9.0",
    "xo": "~0.15.0"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "esnext": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oddnetworks/www.git"
  },
  "author": "Odd Networks (https://www.oddnetworks.com)",
  "homepage": "https://www.oddnetworks.com"
}
